<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>All Groups- EquiSplit</title>
  <!-- Favicons -->
  <link href="img/favicon.png" rel="icon">
  <link href="img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="vendor/simple-datatables/style.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="css/style.css" rel="stylesheet">
  <style>

    .d-table-cell ul li{
      color:white
    }

  </style>
</head>


<body class="">


  <!-- Start Header Area -->

  <%- include("Header") %>
    <!-- End Header Area -->


    <!-- Start Sidebar Area -->

    <%- include("Sidebar") %>
      <!-- End Sidebar Area -->





      <main id="main" class="main">
        <div class="pagetitle">
          <h1>Expenses</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Groups</a></li>
              <li class="breadcrumb-item active">Expenses</li>
            </ol>
          </nav>
        </div><!-- End Page Title -->



        <section class="section dashboard">
          <div class="row">
            <% for(var i=0; i<groupdList.length;i++) { %>

              <div class="col-xxl-4 col-md-6">
                <div class="ea-single-flip-box style-two">
                  <div class="ea-flip-box-front-part" onmouseenter="loadData(<%=groupdList[i].groupid %>)">

                    <h3>
                      <%=groupdList[i].groupname %>
                    </h3>
                  </div>
                  <div class="ea-flip-box-back-part">
                    <div class="d-table">
                      <div class="row">
                      <div class="col-12 d-table-cell" id="back_side_<%=groupdList[i].groupid%>">
                        
                       
                        
                      </div>
                      <div class="col-12">
                      <a href="#" class="link-btn"  onclick="OpenModal(<%=groupdList[i].groupid%>)">Add
                        Expenses</a>
                      </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <% } %>


          </div>


        </section>

      </main>

      <div class="modal fade" id="basicModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title"></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/addtrn" method="post">
              <div class="modal-body">

                <div class="row mb-3 " style="display: none;">
                  <label for="groupid" class="col-sm-3 col-form-label">Group Id</label>
                  <div class="col-sm-9">
                    <input type="number" class="form-control" name="groupid" id="groupid">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="amount" class="col-sm-3 col-form-label">Amount</label>
                  <div class="col-sm-9">
                    <input type="number" class="form-control" name="amount" id="amount">
                  </div>
                </div>


                <div class="row mb-3">
                  <label for="details" class="col-sm-3 col-form-label">Details</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="details" id="details">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="paidby" class="col-sm-3 col-form-label">Paid By</label>
                  <div class="col-sm-9">
                    <select  class="form-control" id="paidby" name="paidby"></select>
                  </div>
                </div>


                <div class="row mb-3">
                  <label for="splitinto" class="col-sm-3 col-form-label">Split Into</label>
                  <div class="col-sm-9">
                    <select  class="form-control" id="splitinto" name="splitinto" multiple></select>
                  </div>
                </div>


              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add Expenses</button>
              </div>
            </form>
          </div>
        </div>
      </div><!-- End Basic Modal-->
      <!-- Links of JS files -->
      <!-- Vendor JS Files -->
      <script src="vendor/apexcharts/apexcharts.min.js"></script>
      <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <script src="vendor/chart.js/chart.umd.js"></script>
      <script src="vendor/echarts/echarts.min.js"></script>
      <script src="vendor/quill/quill.js"></script>
      <script src="vendor/simple-datatables/simple-datatables.js"></script>
      <script src="vendor/tinymce/tinymce.min.js"></script>
      <script src="vendor/php-email-form/validate.js"></script>

      <!-- Template Main JS File -->
      <script src="js/main.js"></script>

      <script src="js/jquery.min.js"></script>
      <script>

$(document).ready(function () { });
        function loadData(groupid) {

          


          $.ajax({
            url: 'loadTrnData',
            method: 'POST',
            data: { groupid: groupid },
            success: function (data) {

              var html="<ul>";
              data.forEach(element => {
                html+= "<li> <div class='row'><div class='col-10 '>"+element.name + " ("+element.emailid+"): </div> <div class='col-2 '>â‚¹ "+element.amount+"</div></div> </li>";

              });
              html+="</ul>"
              $("#back_side_"+groupid).html(html)
              
            },
            error: function (err) {
              console.error('Error fetching data:', err);
            }
          });

        }



        function OpenModal(groupid){



          $('#basicModal').modal('show');
          
         
          $.ajax({
            url: 'getGroupDetails',
            method: 'POST',
            data: { groupid: groupid },
            success: function (data) {

              $("#groupid").val(data[0].groupid)
              $(".modal-title").text(data[0].groupname)
              
              var html="";
              data.forEach(element => {
                html+= "<option value='"+element.memberid+"'> " + element.firstname+" "+element.lastname+" ("+element.emailid+")</option>"

              });
              $("#paidby").html(html);
              $("#splitinto").html(html)
              
            },
            error: function (err) {
              console.error('Error fetching data:', err);
            }
          });


        }
      </script>

</body>

</html>